<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewRegular">
        <item name="android:fontFamily">@font/core_sans_cr_45_regular</item>
        <item name="android:textColor">@color/colorSecondary3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextViewMedium">
        <item name="android:fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="android:textColor">@color/colorSecondary3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextViewBold">
        <item name="android:fontFamily">@font/core_sans_cr_65_bold</item>
        <item name="android:textColor">@color/colorSecondary3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="iconSize">14sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="android:paddingEnd">19dp</item>
        <item name="android:paddingStart">19dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="ButtonStyle.PrimaryColor" parent="ButtonStyle">
        <item name="iconTint">@color/colorPrimary</item>
        <item name="android:background">@drawable/ripple_btn_primary_color_selector</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <!-- TextEditInputs -->
    <style name="TextEditInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorSecondary3</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/colorSecondary4</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- TextInputLayouts -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorSecondary3</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="TextInputLayoutStyle_2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.MyApp.Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <!-- Custom margin -->
        <item name="android:layout_margin">0dp</item>
        <!-- Custom padding -->
        <item name="android:padding">0dp</item>
    </style>

</resources>
