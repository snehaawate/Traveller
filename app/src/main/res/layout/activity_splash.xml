<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.activities.SplashActivity"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="89dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cyprus_traveler_logo" />

    <TextView
        android:id="@+id/textView_Header_1"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/sk_gothenburg_rounded_regular"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/colorWhiteLight"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView_Header_2"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        style="@style/TextViewMedium"
        android:text="@string/txt_your_gateway_to_memorable_escapes"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/core_sans_cr_35_light_italic"
        android:textColor="@color/colorYellowOrange"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_Header_1"
        app:layout_constraintStart_toStartOf="@+id/textView_Header_1"
        app:layout_constraintTop_toBottomOf="@+id/textView_Header_1" />

<!--    <TextView
        android:id="@+id/text_view_loading"
        style="@style/TextViewMedium"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/txt_loading"
        android:textAlignment="center"
        android:textColor="@color/colorSecondary5"
        app:layout_constraintEnd_toEndOf="@+id/textView_Header_2"
        app:layout_constraintStart_toStartOf="@+id/textView_Header_2"
        app:layout_constraintTop_toBottomOf="@+id/textView_Header_2" />-->

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/gif_dual_ring_progress_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Header_2" />
    
</androidx.constraintlayout.widget.ConstraintLayout>
